<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <context:property-placeholder location="dooray.properties"/>

    <bean id="restTemplate" class="org.springframework.web.client.RestTemplate"/>

    <bean id="doorayHookSender" class="com.nhn.dooray.client.DoorayHookSender">
        <constructor-arg index="0" ref="restTemplate"/>
        <constructor-arg index="1" value="${hookUrl}"/>
    </bean>

    <bean id="doorayMessageSender" class="com.nhnacademy.edu.springframework.messageSender.service.DoorayMessageSender" >
        <constructor-arg ref="doorayHookSender"/>
    </bean>


    <bean id="messageSendService" class="com.nhnacademy.edu.springframework.messageSender.service.MessageSendService">
        <constructor-arg ref="doorayMessageSender"/>
    </bean>
</beans>
